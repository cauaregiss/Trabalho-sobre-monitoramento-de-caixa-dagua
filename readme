  <title>AquaMonitor - Dashboard</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      background-color: #f4f6f9;
    }
    header {
      background-color: #007bff;
      color: white;
      padding: 15px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-radius: 8px 8px 0 0;
    }
    header h1 {
      margin: 0;
      font-size: 20px;
    }
    header button {
      background-color: white;
      color: #007bff;
      border: none;
      padding: 8px 15px;
      border-radius: 6px;
      cursor: pointer;
      font-weight: bold;
    }
    .card, .grafico {
      margin: 20px;
      padding: 20px;
      background: white;
      border-radius: 10px;
      box-shadow: 0px 2px 6px rgba(0,0,0,0.1);
    }
    .card h2, .grafico h2 {
      color: #007bff;
    }
    .btn {
      padding: 10px 20px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-weight: bold;
      margin-top: 15px;
    }
    .btn-ligar {
      background-color: #28a745;
      color: white;
    }
    .btn-desligar {
      background-color: #dc3545;
      color: white;
    }
    canvas {
      width: 100% !important;
      max-height: 280px;
    }
